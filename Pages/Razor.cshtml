@page
@model MyApp.Namespace.RazorModel 
@{
    ViewData["Title"] = "Razor";

    string[] classname = {"DT057, Webbutveckling 1", "DT093G, Webbutveckling 2", "DT173G, Webbutveckling 3"};

    var date = DateTime.Now;

    bool isFriday = date.DayOfWeek == DayOfWeek.Friday; // Kollar om det är fredag
}

<div class="text-center">
    <h1>Razor</h1>
    <p><strong>Datum/klockslag:</strong> @date</p>

        @if (isFriday) // Kollar om det är fredag och skriver ut en text beroende på resultatet
        {
            <p>Idag är det fredag! :)</p>
        }
        else
        {
            <p>Idag är det inte fredag! :(</p>
        }

    <p><strong>Kurser jag läst:</strong></p>
    <ul>
        @foreach (var item in classname) // Loopar igenom arrayen och skriver ut varje element i en lista
        {
            <li>@item</li>
        }
    </ul>
</div>
